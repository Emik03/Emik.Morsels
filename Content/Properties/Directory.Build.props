<Project>
    <Import Condition="Exists($([MSBuild]::GetPathOfFileAbove('Directory.Build.local.props', '$(MSBuildProjectFullPath)../')))" Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.local.props', '$(MSBuildProjectFullPath)../'))"/>
    <!-- Fallback paths. -->
    <PropertyGroup>
        <Morsels Condition="$(Morsels) == '' and Exists('$(MSBuildProjectFullPath)../Emik.Morsels/')">$(MSBuildProjectFullPath)../Emik.Morsels/</Morsels>
        <Morsels Condition="$(Morsels) == '' and Exists('$(MSBuildProjectFullPath)../../Emik.Morsels/')">$(MSBuildProjectFullPath)../../Emik.Morsels/</Morsels>
        <Morsels Condition="$(Morsels) == '' and Exists('$(MSBuildProjectFullPath)../../../Emik.Morsels/')">$(MSBuildProjectFullPath)../../../Emik.Morsels/</Morsels>
        <Morsels Condition="$(Morsels) == '' and Exists('$(MSBuildProjectFullPath)../../../../Emik.Morsels/')">$(MSBuildProjectFullPath)../../../../Emik.Morsels/</Morsels>
        <Morsels Condition="$(Morsels) == '' and Exists('$(MSBuildProjectFullPath)../../../../../Emik.Morsels/')">$(MSBuildProjectFullPath)../../../../../Emik.Morsels/</Morsels>
    </PropertyGroup>
    <Import Condition="Exists('$(Morsels)/Content/Emik.Morsels.props')" Project="$(Morsels)/Content/Emik.Morsels.props"/>
</Project>
