<Project>
    <Target Name="EnsureMorselsIsSet" BeforeTargets="PreBuildEvent" Condition="'$(Morsels)' == ''">
        <Error Text="Emik.Morsels link missing. Copy the template Emik.Morsels.local.props.template and rename it to Emik.Morsels.local.props and fill each tag with the respective directories on your local system. The folder to Emik.Morsels should be specified by having an Emik.Morsels.local.props file within or above the directories of this project." HelpLink="https://github.com/Emik03/Emik.Morsels#usage"/>
    </Target>
    <Import Condition="Exists('$(Morsels)/Content/Emik.Morsels.targets')" Project="$(Morsels)/Content/Emik.Morsels.targets"/>
</Project>
